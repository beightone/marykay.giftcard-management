    "eslint-config-vtex-react": "6.3.2",
    "husky": "4.2.3",
    "lint-staged": "10.1.1",
    "prettier": "2.0.2",
    "typescript": "3.8.3"
  },
  "version": "0.1.0",
  "description": "Backend service for GiftCard Management",
  "dependencies": {
    "@vtex/api": "6.45.0",
    "co-body": "^6.0.0"
